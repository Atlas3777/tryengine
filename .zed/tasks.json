[
  {
    "label": "Build Shaders",
    "command": "cmake",
    "args": ["--build", "build", "--target", "shaders"],
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
  },
  {
    "label": "Build Project",
    "command": "cmake",
    "args": ["--build", "build"],
    "use_new_terminal": true,
  },
  {
    "label": "Configure Project",
    "command": "cmake",
    "args": ["-B", "build", "-S", "."],
    "use_new_terminal": true,
  },
  {
    "label": "Clean Build",
    "command": "rm",
    "args": ["-rf", "build"],
    "use_new_terminal": true,
  },
  {
    "label": "Run Project",
    "command": "./build/MyGame",
    "use_new_terminal": true,
  },
  {
    "label": "Full Cycle: Config, Build, Run",
    "command": "bash",
    "args": [
      "-c",
      "cmake -B build -S . && cmake --build build && ./build/MyGame",
    ],
    "use_new_terminal": true,
  },
  {
    "label": "Build Shaders (Manual)",
    "command": "bash",
    "args": [
      "-c",
      "glslc shaders/fragment.frag -o shaders/fragment.spv && glslc shaders/vertex.vert -o shaders/vertex.spv",
    ],
    "use_new_terminal": true,
  },
]
